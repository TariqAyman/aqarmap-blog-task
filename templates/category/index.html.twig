{% extends 'base.html.twig' %}

{% block body %}
    {% if app.user is not null and app.user|isUserAdmin  is same as(true) %}
        <div class="row">
            <div class="col-md-12">
                <div class="text-center">
                    <a href="{{ url('category_create') }}" class="btn btn-primary text-uppercase">Add new Category</a>
                </div>
            </div>
        </div>
    {% endif %}

    <div class="row">
        <div class="col-md-12">
            <!-- category widget -->
            <div class="aside-widget">
                <div class="section-title">
                    <h2 class="title">List All Categories</h2>
                </div>
                <div class="category-widget">
                    <ul>
                        {% for category in categories %}
                            <li>{{ include('category/category.html.twig', {'category': category}) }}</li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
            <!-- /category widget -->
        </div>
    </div>
{% endblock %}
