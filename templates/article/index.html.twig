{% extends 'base.html.twig' %}

{% block body %}
    {% if app.user is not null and app.user|isUserAdmin  is same as(true) %}
        <div class="row">
            <div class="col-md-12">
                <div class="text-center">
                    <a href="{{ url('article_create') }}" class="btn btn-primary text-uppercase">Add new Article</a>
                </div>
            </div>
        </div>
    {% endif %}

    <div class="row">
        <div class="col-md-12">
            <!-- row -->
            <div class="row">
                <div class="col-md-12">
                    <div class="section-title">
                        <h2 class="title">Posts</h2>
                    </div>
                </div>
                {% if articles is not empty %}
                    {% for article in articles %}
                        <!-- post -->
                        {{ include('article/preview.article.html.twig', {'article': article}) }}
                        <!-- /post -->
                        <div class="clearfix visible-md visible-lg"></div>

                    {% endfor %}
                {% else %}
                    <h3 class="text-center">There no Articles Exists</h3>
                {% endif %}
            </div>
            <!-- /row -->
        </div>
    </div>
{% endblock %}
